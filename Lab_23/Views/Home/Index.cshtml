@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Coffee & Co.</h1>
    <p class="lead">Register your account today!</p>
    <p><a href="/User" class="btn btn-primary btn-lg">Register &raquo;</a></p>
</div>
<h2> Items we sell</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>

    </tr>
    @for (int i = 0; i < ViewBag.Items.Count; i++)
    {
        <tr>
            <td>@ViewBag.Items[i].ID</td>
            <td>@ViewBag.Items[i].Name</td>
            <td>@ViewBag.Items[i].Description</td>
            <td>@ViewBag.Items[i].Quantity</td>
            <td>@ViewBag.Items[i].Price</td>

        </tr>
    }
</table>

<form action="Home/ItemByName" onsubmit="return CheckItem()">
    <input type="text" name="byName" id="item" placeholder="type item name exactly" />
    <input type="submit" class="btn btn-primary" value="Lookup" />
    <span id="ItemWarning"></span>
</form>



<div class="row">
    <div class="col-md-4">
        <h2>Our Story</h2>
        <p>
            Coffee & Co. started as a passion project in Java Joe's garage. Read the whole story!
        </p>
        <p><a class="btn btn-default" href="Home/About">Learn more &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Have Feedback?</h2>
        <p>Let us know how you feel.</p>
        <p><a class="btn btn-default" href="Home/Contact">Contact &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>New Accounts</h2>
        <p>
            You're just one step away from grinded goodness.
        </p>
        <p><a class="btn btn-default" href="/User">Sign Up &raquo;</a></p>
    </div>
</div>
<script>
    function CheckItem() {
        //alert("CheckItem running")
        var item = document.getElementById("item").value;
        if (item === "Holiday Music CD" || item === "Mug" || item === "Canvas Tote") {
            return true;
        }
        document.getElementById("ItemWarning").innerHTML =
            "<b>" + "type item name exactly(case-sensitive)</b>";
        return false;
    }
</script>